{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "vite/client"
        ],
        "noImplicitAny": false,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "type.d.ts",
        "src/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}